1.6
log
@-
@
text
@#!/bin/sh
# $Id: cpplint.py.sh,v 1.5 2015-06-19 15:23:36-07 - - $
#
# This is a wrapper script around cpplint.py which suppresses
# some of Google's standard complaints.
#
# Files matching the pattern yy* are skipped, because they are
# expected to be generated by flex and bison (yylex.cpp and
# yyparse.cpp).  Avoid naming user-generated files starting
# with the pattern yy*.
#

for filter in \
   -build/include \
   -build/namespaces \
   -legal/copyright \
   -readability/alt_tokens \
   -runtime/string \
   -whitespace/end_of_line \
   -whitespace/forcolon \
   -whitespace/indent \
   -whitespace/parens \
   ''
do
   filters=$filters,$filter
done

cpplint_opts="--linelength=72 --filter=$filters"

for cpp in $*
do
   if [[ $cpp != yy* ]]
   then
      cpplint.py $cpplint_opts $cpp
      checksource $cpp
   fi
done

@


